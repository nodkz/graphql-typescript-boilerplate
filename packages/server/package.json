{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build-ts": "tsc",
    "watch": "yarn clear && concurrently -k npm:watch-*",
    "watch-ts": "tsc --watch --preserveWatchOutput",
    "watch-node": "nodemon --watch ./dist --delay 1",
    "watch-gcg": "npm run gcg -- --watch",
    "gcg": "mkdirp ./src/schema/__generated__ && gql-gen --config codegen.yml",
    "clear": "rm -rf dist || true && mkdir dist",
    "test": "jest",
    "test-watch": "npm run test -- --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.3.1",
    "apollo-server-express": "^2.3.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.4",
    "@types/jest": "^23.3.12",
    "@types/jsonwebtoken": "^8.3.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.12.1",
    "graphql-code-generator": "^0.15.2",
    "graphql-codegen-add": "^0.15.2",
    "graphql-codegen-introspection": "^0.15.2",
    "graphql-codegen-schema-ast": "^0.15.2",
    "graphql-codegen-typescript-common": "0.15.2",
    "graphql-codegen-typescript-resolvers": "^0.15.2",
    "graphql-codegen-typescript-server": "^0.15.2",
    "jest": "^23.6.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  }
}
