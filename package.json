  "name": "gql-test",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodkz/graphql-typescript-boilerplate.git"
  },
  "author": "",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.120",
    "apollo": "^2.3.0",
    "babel-eslint": "9.0.0",
    "concurrently": "^4.1.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-graphql": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rxjs": "6.2.2",
    "rxjs-compat": "6.2.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^22.0.0"
  },
  "resolutions": {
    "graphql": "14.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "eslint -c .eslintrc-graphql --no-eslintrc",
      "git add"
    ],
    "*.graphql": [
      "prettier --parser graphql --write",
      "git add"
    ]
  },
  "scripts": {
    "lint": "npm run eslint && npm run tslint && cd client/ && npm run lint-graphql",
    "eslint": "eslint --fix --ext js --ext jsx .",
    "tslint": "tslint --fix -p tsconfig.json -c tslint.json"
  }
}
